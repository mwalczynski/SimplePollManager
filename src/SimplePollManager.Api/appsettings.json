{
    "ConnectionStrings": {
        "MsSqlDb": "Data Source=mssql;Initial Catalog=cars;User ID=user;Password=simplePWD123!"
    },

    "Serilog": {
        "MinimumLevel": "Information",
        "WriteTo": [
            {
                "Name": "Async",
                "Args": {
                    "configure": [
                        {
                            "Name": "Console"
                        },
                        {
                            "Name": "File",
                            "Args": {
                                "path": "%TEMP%\\Logs\\SimplePollManager.Api.log"
                            }
                        }
                    ]
                }
            }
        ],
        "Enrich": [ "FromLogContext", "WithMachineName", "WithCorrelationIdHeader" ],
        "Properties": {
            "Application": "SimplePollManager.Api"
        }
    }
}
